<div class="container px-4 px-lg-5 mt-5">
  <div class="row gx-4 gx-lg-5 row-cols-1 row-cols-md-3 row-cols-xl-4 justify-content-center">
    <% @items.each do |item|%>
      <% if item.active %>
        <div class="col mb-5" id="card<%= item.id %>">
          <div class="card h-100">
            <!-- Product image-->
              <%= image_tag item.image_url, class:"card-img-top mb-5 mb-md-0"%>
            <!-- Product details-->
            <div class="card-body p-4">
              <div class="text-center">
                <!-- Product name-->
                <h5 class="fw-bolder"><%= item.title %></h5>
                <!-- Product price-->
                <%= item.price %> €
              </div>
            </div>
              <!-- Product actions-->
            <div class="d-flex justify-content-evenly flex-wrap py-4 border-top-0 bg-transparent">
              <div class="text-center">
                <%= link_to 'Détails', item_path(item), class:"btn btn-outline-info my-2" %>
              </div>
              <div class="text-center my-2">
                <% if current_user %>
                  <% if already_in_cart?(item.id) %>
                    <span class= "text-success my-auto">Produit déja ajouté</span>
                  <% else %>
                    <%= button_to 'Ajouter au panier', purchases_path, class:"btn btn-success", method: 'post', params: { item_id: item.id }, remote: true %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>